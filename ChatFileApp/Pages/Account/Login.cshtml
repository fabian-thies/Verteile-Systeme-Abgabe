@page
@model ChatFileApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="text-2xl/9 mt-10 text-center font-bold tracking-tight text-white">Sign in to your account</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form method="post">
            <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>
            <div>
                <label for="Input_Email" class="text-sm/6 block font-medium text-white">Email address</label>
                <div class="mt-2">
                    <input id="Input_Email" name="Input.Email" type="email"
                           class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900"/>
                </div>

                <div>
                    <label for="Input_Password" class="text-sm/6 mt-6 block font-medium text-white">Password</label>
                    <div class="mt-2">
                        <input id="Input_Password" name="Input.Password" type="password"
                               class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900"/>
                    </div>
                </div>
                <div>
                    <button type="submit"
                            class="text-sm/6 mt-10 shadow-xs flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 font-semibold text-white hover:bg-indigo-500">
                        Sign in
                    </button>
                </div>
            </div>
        </form>

        <p class="text-sm/6 mt-10 text-center text-gray-500">
            <a href="/account/register" class="font-semibold">Register</a>
        </p>
    </div>
</div>