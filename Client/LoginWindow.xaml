<!-- LoginWindow.xaml -->
<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login / Register" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameInput" Height="25" Margin="0,0,0,10"/>
            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordInput" Height="25" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="LoginButton" Content="Login" Width="100" Margin="5" Click="LoginButton_Click"/>
                <Button x:Name="RegisterButton" Content="Register" Width="100" Margin="5" Click="RegisterButton_Click"/>
            </StackPanel>
            <TextBlock x:Name="StatusText" Text="" Foreground="Red" Margin="0,20,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>