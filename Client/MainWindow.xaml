<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="MessageInput" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="600" Height="25" Margin="10,0,0,10"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Height="25" Margin="620,0,0,10" Click="SendButton_Click"/>
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Margin="10,10,0,0" Click="ConnectButton_Click"/>
        <ListBox x:Name="ChatMessages" Margin="10,50,10,40"/>
    </Grid>
</Window>