<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Client.Views"
        Title="Chat Application" Height="600" Width="800">
    <Grid>
        <TabControl Name="ChatTabControl">
            <!-- Private Chat Tab -->
            <TabItem Header="Private Chat">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="To (Username): " VerticalAlignment="Center" />
                        <TextBox Name="PrivateTargetTextBox" Width="200" Margin="5,0" />
                    </StackPanel>
                    <ListBox Name="PrivateChatListBox" Grid.Row="1" />
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                        <TextBox Name="PrivateMessageTextBox" Width="500" KeyDown="PrivateMessageTextBox_KeyDown" />
                        <Button Content="Send" Click="SendPrivateMessageButton_Click" Margin="5,0" />
                        <!-- New button to open the whiteboard in private chat mode -->
                        <Button Content="Whiteboard" Click="OpenPrivateWhiteboardButton_Click" Margin="5,0" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <!-- Group Chat Tab -->
            <TabItem Header="Group Chat">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Group Name: " VerticalAlignment="Center" />
                        <TextBox Name="GroupNameTextBox" Width="200" Margin="5,0" />
                        <Button Content="Join Group" Click="JoinGroupButton_Click" Margin="5,0" />
                        <Button Content="Leave Group" Click="LeaveGroupButton_Click" Margin="5,0" />
                    </StackPanel>
                    <ListBox Name="GroupChatListBox" Grid.Row="1" />
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                        <TextBox Name="GroupMessageTextBox" Width="500" KeyDown="GroupMessageTextBox_KeyDown" />
                        <Button Content="Send" Click="SendGroupMessageButton_Click" Margin="5,0" />
                        <!-- New button to open the whiteboard in group chat mode -->
                        <Button Content="Whiteboard" Click="OpenGroupWhiteboardButton_Click" Margin="5,0" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Plugins">
                <views:PluginManager/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
