<Window x:Class="Client.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        FontFamily="Segoe UI"
        WindowStyle="None"
        AllowsTransparency="True">
    <!-- Border for modern card look with drop shadow -->
    <Border Background="White" CornerRadius="8" Padding="0"
            Effect="{DynamicResource DropShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>        <!-- Custom title bar -->
                <RowDefinition Height="Auto"/>        <!-- Error area (collapsed if unused) -->
                <RowDefinition Height="*"/>           <!-- Content area -->
            </Grid.RowDefinitions>
            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Register" FontWeight="Bold" FontSize="16" 
                           VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"/>
                <Button Content="X" Width="40" Height="40" Grid.Column="1" 
                        Click="CloseButton_Click"
                        Background="Transparent" BorderBrush="Transparent" 
                        Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
            <!-- Error Area (hidden when no error) -->
            <StackPanel x:Name="ErrorPanel" Grid.Row="1" Visibility="Collapsed" Margin="10,5,10,5">
                <!-- ScrollViewer for long error messages -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="60">
                    <TextBlock x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </ScrollViewer>
            </StackPanel>
            <!-- Content Area -->
            <StackPanel Grid.Row="2" Margin="20">
                <TextBlock Text="Username:" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
                <TextBlock Text="Password:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
                <TextBlock Text="Confirm Password:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Register" Click="RegisterButton_Click" Margin="5"/>
                    <Button Content="Back to Login" Click="BackToLoginButton_Click" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
