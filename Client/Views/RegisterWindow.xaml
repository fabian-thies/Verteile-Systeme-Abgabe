<!-- RegisterWindow.xaml -->
<Window x:Class="Client.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox Name="UsernameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>
            <TextBlock Text="Confirm Password:" Margin="0,0,0,5"/>
            <PasswordBox Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,0,0,10"/>
            <Button Content="Back to Login" Click="BackToLoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>